<template>
  <div 
    class="cg-<%= options.name%>"
  >

  </div>
</template>

<script lang="ts">
import { defineComponent, computed, inject } from 'vue'
import styleVar from './styleVar'
import { assignThemecustom } from '@corgi/utils'

export default defineComponent({
  name: 'Cg<%= options.fileName %>',
  props: {
    type: {
      type: String,
      default: 'default'
    }
  },
  setup () {
    const customTheme = inject('theme', {})
    let cssVar = computed(() => {
      let composeVar = customTheme ? assignThemecustom(customTheme, styleVar) : styleVar
      if (props.color) {
        composeVar.color = props.color
      }
      return composeVar
    })

    return {
      cssVar
    }
  }
})
</script>

