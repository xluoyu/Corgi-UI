{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@site/*": ["./site/*"],
      "@corgi/*": ["./src/*"],
    },
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
  },
  // "include": ["site/**/*.vue", "site/**/*.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "src/**/*.md"],
  "exclude": [
    "node_modules",
    "__test__/**/*"
  ]
}
